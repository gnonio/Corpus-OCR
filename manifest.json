{
  "manifest_version": 2,
  "name": "korporize",
  "version": "0.9.2",
  "description": "OCR - Optical Character Recognition for any image you browse upon",
  "icons": {
    "32": "img/k.svg"
  },
  "homepage_url": "https://github.com/gnonio/korporize",
  "browser_specific_settings": {
    "gecko": {
      "id": "korporize@gnonio.com"
    }
  },
  "options_ui": {
    "page": "./js/options.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "js/common.js",
      "background.js",
      "background-ui.js",
      "lib/tesseract.min.js"
    ]
  },
  "web_accessible_resources": [
    "img/*.svg",
    "js/*.js",
    "lib/*.js"
  ]
}
